{
  "compilerOptions": {
    "target": "ES6",             /* Specify the target ECMAScript version */
    "module": "CommonJS",        /* Specify the module system (e.g., CommonJS, ESNext) */
    "outDir": "./dist",          /* Specify the output directory for compiled JavaScript files */
    "strict": true,              /* Enable strict type checking */
    "esModuleInterop": true,     /* Enable interoperability between CommonJS and ES6 modules */
    "skipLibCheck": true,        /* Skip type checking of declaration files */
    "forceConsistentCasingInFileNames": true, /* Ensure consistent casing in file names */
    "removeComments": true,      /* Remove comments from the compiled JavaScript files */
    "resolveJsonModule": true,   /* Allow importing .json files */
  },
  "include": [
    "./src/**/*.ts",             /* Specify the source files to include in the compilation */
    "../package.json"            /* and any other files you want to copy to the dist folder */
  ],
  "exclude": [
    "./node_modules",            /* Specify the files to exclude from compilation */
    "./src/**/*.test.ts"
  ]
}